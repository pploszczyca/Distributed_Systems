html
    head 
        title= 'Form'
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css')
    body 
        form(action='/bitcoinInfo', method='post', class='m-3')
            div(class='field')
                label(class='label')= 'Start Date'
                input(class='input' type='datetime-local' name='startDate')

            div(class='field')
                label(class='label')= 'End Date'
                input(class='input' type='datetime-local' name='endDate')

            div(class='field is-grouped')
                div(class='control')
                    button(class='button is-link')= 'Submit'


