html
    head 
        title= 'Game Form'
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css')
    body 
        form(action='/form', method='post', class='m-3')
            div(class='field')
                label(class='label')= 'Game title'
                .control 
                    input(class='input' type='text' name='title')
                p.help="For example: Grand Theft Auto V, The Witcher 3, Monster Hunter World etc."

            div(class='field is-grouped')
                div(class='control')
                    button(class='button is-link')= 'Submit'


